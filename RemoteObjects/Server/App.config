<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown
          mode="Singleton"
          type="Server.Services.Authentication, Server"
          objectUri="Auth"/>
      </service>
      <channels>
        <channel ref="tcp server" port="9000">
            <serverProviders>
                <formatter ref="binary" typeFilterLevel="Full"/>
            </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>
